@model ProductosApi.Controllers.Models.Producto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Actualizar Producto</h1>

<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <form action="/Home/Update" method="post">

            <input type="hidden" name="idproducto" value="@Model.idproducto" />

            <div class="form-group mb-3">
                <label for="nombre">Nombre:</label>
                <input value="@Model.nombre" type="text" name="nombre" class="form-control"/>
            </div>

            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="number" value="@Model.precio" name="precio" class="form-control">
            </div>

            <div class="form-group mb-3">
                <label for="cantidad">Cantidad:</label>
                <input type="number" value="@Model.cantidad" name="cantidad" class="form-control"/>
            </div>

            <div class="form-group mb-3">
                <label for="fecha_registro">Fecha de registro:</label>
                <input type="date" value="@Model.fecha_registro.ToString("yyyy-MM-dd")" name="fecha_registro" class="form-control"  />
            </div>

            <input type="hidden" name="estado" value="@(Model.estado ? "true" : "false")" />

            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
